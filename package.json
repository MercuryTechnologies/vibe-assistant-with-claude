{
  "name": "mercury-prototype",
  "private": true,
  "version": "1.0.0",
  "description": "Mercury Design Prototype for designers to iterate on UI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "track-usage": "node scripts/track-usage.js",
